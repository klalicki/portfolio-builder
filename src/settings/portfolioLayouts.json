      "line2": {
        "fontFamily": "fontStack1",
        "fontWeight": "400",
        "fontSize": "1rem",
        "lineHeight": 1.25,
        "color": "#ffffff",
        "marginTop": "0rem",
        "marginBottom": "0.25rem"
      },
      "line3": {
        "fontFamily": "fontStack1",
        "fontWeight": "400",
        "fontSize": "0.75rem",
        "lineHeight": 1.25,
        "color": "#ffffff",
        "marginTop": "0rem",
        "marginBottom": "0.25rem"
