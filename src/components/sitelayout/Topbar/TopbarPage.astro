---
import TopbarNav from "./TopbarNav.astro";
import { settings } from "../../helpers/settingsHelper";
const menuBg = settings.menu.position.value.hideBar
  ? "transparent"
  : settings.menu.colors.backgroundColor;
---

<style
  define:vars={{
    menuBackgroundColor: menuBg,
    menuHeight: settings.menu.sizes.topBarHeight,
  }}
>
  body {
    padding: 0;
  }
  header {
    position: sticky;
    left: 0;
    top: 0;
    min-height: var(--menuHeight);

    right: 0;
    background-color: var(--menuBackgroundColor);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;

    z-index: 10;
  }
  main {
  }
</style>
<body>
  <header>
    <TopbarNav />
  </header>
  <main>
    <slot />
  </main>
</body>
