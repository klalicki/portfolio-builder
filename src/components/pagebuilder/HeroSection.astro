---
const { props } = Astro;
const imagePath = "../../assets/images" + props.image;
import Image from "astro/components/Image.astro";
import { getImage } from "astro:assets";
import { settings } from "../helpers/settingsHelper";
const pageWidth = settings.pageArea.pageWidth;
const sidePadding = settings.pageArea.padding.horizontal;
import MarkdocImageReplace from "./MarkdocImageReplace.astro";
console.log(props);
const images = import.meta.glob<{ default: ImageMetadata }>(
  "./../../assets/images/**/*.{jpeg,jpg,png,gif}"
);
// console.log(images);
if (!images[imagePath])
  throw new Error(
    `"${props.image}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );

const fancyImage = await getImage({ src: images[imagePath](), width: 1200 });
// console.log(fancyImage);
const parallaxSelector = {
  backgroundAttachment: "scroll",
};
if (props.parallax) {
  parallaxSelector.backgroundAttachment = "fixed";
}
---

{
  props.parallax && (
    <script>import simpleParallax from 'simple-parallax-js';</script>
  )
}

<style
  define:vars={{
    heroWidth: props.width,
    heroHeight: props.height,
    pageWidth,
    sidePadding,
    panelWidth: props.panelWidth,
  }}
>
  .hero-section-wrapper {
    max-width: var(--heroWidth);
    height: var(--heroHeight);
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
  .hero-section-image {
    width: 100%;
    height: var(--heroHeight);
    object-fit: cover;
    position: absolute;
    left: 0;
    top: 0;
    border: 1px solid red;
    /* padding: 2rem; */
    /* background-size: cover;
    background-position: center; */
    /* background-attachment: fixed; */
    z-index: -1;
  }
  .hero-section-content-panel {
    background-color: white;
    /* position: relative; */
    padding: 1rem;
    max-width: var(--panelWidth);
  }
  .hero-section-content-wrapper {
    width: 100%;
    max-width: var(--pageWidth);
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
  }
</style>
<div class="hero-section-wrapper">
  <div class="hero-section-content-wrapper">
    <div class="hero-section-content-panel">
      <slot />
    </div>
  </div>
  <MarkdocImageReplace class={"hero-section-image"} src={imagePath} alt="" />
  <!-- <div
    class="hero-section-image"
    style={{ backgroundImage: `url(${fancyImage.src})`, ...parallaxSelector }}
  > -->
</div>
