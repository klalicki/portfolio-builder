---
const { props } = Astro;
import { settings } from "../../helpers/settingsHelper";
const tileSettings = settings.portfolioLayouts.coolTile;
import { fontRules } from "../../helpers/fontRuleBuilder";
// @ts-ignore
const rules = fontRules(tileSettings.typography);
console.log(rules);
---

<style
  define:vars={{
    minTileWidth: tileSettings.tiles.minWidth + "px",
    containerPadding: tileSettings.container.padding,
    tileGap: tileSettings.container.gap,
    ...rules,
  }}
>
  .tile-container {
    display: grid;
    grid-template-columns: repeat(
      auto-fill,
      minmax(min(var(--minTileWidth), 100%), 1fr)
    );
    gap: var(--tileGap);
    padding: var(--containerPadding);
  }
</style>

<div
  id={props.containerId}
  class="tile-container"
  style={{ maxWidth: tileSettings.container.width }}
>
  <slot />
</div>
