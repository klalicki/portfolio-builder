---
import { getImage } from "astro:assets";
const { title, url, thumbnail, accent } = Astro.props;
import { settings } from "../../helpers/settingsHelper";
const tileSettings = settings.portfolioLayouts.coolTile;
let fancyImage = { src: "" };
if (thumbnail) {
  const imageProps = await getImage({
    src: thumbnail,
  });
  // console.log(imageProps);
  const srcRatio = imageProps.attributes.width / imageProps.attributes.height;
  const neededWidth = srcRatio * tileSettings.minTileWidth * 2;

  fancyImage = await getImage({
    src: thumbnail,
    width: neededWidth,
  });
}
---

<style define:vars={{ tileRatio: tileSettings.tileAspectRatio }}>
  .portfolio-tile {
    aspect-ratio: var(--tileRatio);
    position: relative;
    overflow: hidden;
    background-size: cover;
    transition: background 0.5s linear;
  }

  .tile-hover-panel {
    position: absolute;
    bottom: 0px;
    left: 0;
    right: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.642);
    padding: 0.5rem;
    display: flex;
    /* flex-direction: column; */
    transform: scale(0.9);
    transform-origin: 50% 120% 0;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .portfolio-tile:hover .tile-hover-panel,
  .portfolio-tile:focus-within .tile-hover-panel {
    transform: scale(1);
    opacity: 1;
  }

  .tile-hover-panel-title {
    color: white;
  }
</style>

<article
  class="portfolio-tile"
  style={{ backgroundColor: accent, backgroundImage: `url(${fancyImage.src})` }}
>
  <!-- {
    thumbnail ? (
      <Image widths={[500]} class={"tile-image"} src={thumbnail} alt="" />
    ) : (
      <div class="tile-image" style={{ backgroundColor: accent }} />
    )
  } -->
  <div class="tile-hover-panel">
    <a class="tile-hover-panel-title" href={url}>{title}</a>
  </div>
</article>

